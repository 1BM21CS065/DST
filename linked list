#include <stdio.h>
#include <stdlib.h>

struct node
{

    int data;
    struct node * next;
};
struct node * head;

void beginsert()
{
    struct node * ptr;
    int item;
    ptr=(struct node *) malloc(sizeof(struct node*));
    if(ptr==NULL)
    {
        printf("\n overflow");
    }
    else
    {

        printf("\n Enter value");
        scanf("%d", &item);
        ptr->data=item;
        ptr->next=head;
        head=ptr;
        printf("\n node inserted");
    }
}
void display()
{
    struct node *ptr;
    ptr=head;
    if(ptr==NULL)
        printf("Nothing to print");
    else
    {
        printf("Printing values\n");
        while(ptr!=NULL)
        {
            printf("\n %d", ptr->data);
            ptr=ptr->next;
        }
    }

}


void main()
{

    int choice;
    while(choice!=3)
    {
        printf("\nmenu\n");
        printf("1.beginsert\n 2.display\n3.exit\n");
        printf("enter your choice\n");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:beginsert();
                   break;
            case 2:display();
                   break;
            case 3:exit(0);
            default:printf("wrong insertion");

        }
    }
}
